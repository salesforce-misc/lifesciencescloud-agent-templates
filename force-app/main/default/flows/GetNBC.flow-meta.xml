    </recordLookups>
    <recordLookups>
        <description>Find Territory Account Score records for the user&apos;s territory</description>
        <name>Get_NBC</name>
        <label>Get NBC</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Check_NBC_Found</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>TerritoryId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>TerritoryId</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>false</getFirstRecordOnly>
        <limit>
