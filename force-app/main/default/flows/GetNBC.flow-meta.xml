        <description>Check if NBC were found</description>
        <name>Check_NBC_Found</name>
        <label>Check NBC Found</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Set_No_VNBC_Error</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No NBC Found</defaultConnectorLabel>
        <rules>
            <name>NBC_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_NBC</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Process_NBC</targetReference>
            </connector>
            <label>NBC Found</label>
        </rules>
    </decisions>
