        </defaultConnector>
        <defaultConnectorLabel>No Territory Found</defaultConnectorLabel>
        <rules>
            <name>Territory_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_User_Territory</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Territory_Id</targetReference>
            </connector>
            <label>Territory Found</label>
        </rules>
    </decisions>
